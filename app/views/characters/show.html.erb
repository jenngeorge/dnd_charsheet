<h1><%= @character.name %> </h1>

<%= render partial: 'characters/background', object: @character.background %>

<% if !@character.background %>
  <%= render partial: 'backgrounds/form' %>
<%end %>


<%= link_to "<< Back to All Characters", characters_path %>
<%= link_to "delete", character_path(@character), method: :delete, data: {confirm: "Really delete the article?"} %>
<%= link_to "edit", edit_character_path(@character) %>
